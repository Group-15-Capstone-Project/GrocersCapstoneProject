<div * ngIf = "RegisterFlag">
    <form >
<h2>Registration</h2>

<a href = "tdf-login-page.component.html">Login </a>

<label>First Name </label>
<input type="text" name = "fname" [value]=""  ngModel required /><br/>
<label>Last Name </label>
<input type="text" name ="lname" [value]=""  ngModel required/><br/>

<label>UserName </label>
<input type="text" #usernameRef formControlName="usrset"  [value] = "" ngModel required minlength="2"/><br/>
<label>Password </label>
<input type="password" #password formControlName="pwdset" [value] = "" ngModel required/><br/>

<input type ="button" value = "Register" (click) = "register()" />
</form>
</div>