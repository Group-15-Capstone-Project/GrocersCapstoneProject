
  
    <div *ngIf = loginFlag>
    <p>Signin Form</p>
    <form  >
    <label>UserName</label>
    <input type="text" formControlName="user" [value] = "" ngModel required minlength="2"/><br/>
    <label>Password</label>
    <input type="password" formControlName="pass" [value] = "" ngModel required/><br/>
    <input type="submit" value="submit"  (ngSubmit) = "checkUser(loginForm)" [disabled]="!loginForm.valid"/>
    <input type="reset" value="reset"/>
    </form>
    
    <br/>
    {{msg}}
    <input type = "button" [value]= "" (click) = "toggle()" />
    </div>
    
    
    
    
    <div * ngIf = porfolioFlag> 
        <form  >
    <h2> Contacts </h2>
    <p>Welcome  </p>
    <label>Name: </label>
    <input type="text" #nameRef [value]= ""  ngModel required /><br/>
    <label>Phone #: </label>
    <input type="text" #phoneRef [value]="" ngModel required/><br/>

 </form>
    <table >
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            
        </tr>
        <tr *ngFor = "let contact of contacts">   
                <td>{{contact.cname}}</td>
               <td>{{contact.phone}}</td>
               <td></td>
               <td></td>
        </tr>
    </table>
    
    <input type ="button" value = "save" (click) = "SaveData()" />
    </div>
